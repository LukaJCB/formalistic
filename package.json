{
  "name": "form-model",
  "version": "1.0.0",
  "description": "Handle form data and form validation",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib/* && babel src -d lib",
    "test": "npm run test:unit && npm run test:lint",
    "test:unit": "jest --coverage --collectCoverageFrom=\"src/**/*.js\"",
    "test:lint": "eslint src/**/*.js test/**/*.js",
    "test:watch": "jest --coverage --collectCoverageFrom=\"src/**/*.js\" --watchAll",
    "precommit": "npm run build && npm test && git add -u ."
  },
  "author": "Ben Ripkens <bripkens@gmail.com> (http://bripkens.de/)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-preset-env": "^1.1.8",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.13.1",
    "husky": "^0.12.0",
    "jest": "^18.1.0",
    "sinon": "^1.17.7"
  }
}
